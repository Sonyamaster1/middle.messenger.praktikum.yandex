<div class="{{ styles.messenger }}">
    {{#if selectedChat }}
        <div class="{{ styles.messenger__messages }}">
            {{{removebtn}}}
            <form id="id-by-input">
                <div class="{{ styles.create-delete }}">
                    {{{logininput}}}
                    {{{getisbyinputbtn}}}
                    {{{removenewuser}}}
                </div>
            </form>
            {{#each messages}}
                {{{this}}}
            {{/each}}
        </div>
        <div class="{{ styles.messenger__footer }}">
            {{{input}}}
            {{{button}}}
        </div>
    {{else}}
        Выберите чат
    {{/if}}
</div>
