<main class="page">
    <section class="user-section">
        <h2 class="title">Change a user</h2>
        <div class="avatar-container"></div>
        <form class="user-form" id="avatar-form">
            {{{inputavatar}}}
            {{{buttonavatar}}}
        </form>
        <form class="main-form" id="registry-form">
            {{{inputemail}}}
            {{{inputlogin}}}
            {{{inputfirst_name}}}
            {{{inputsecond_name}}}
            {{{inputdisplay_name}}}
            {{{inputphone}}}

            {{{enterbutton}}}
        </form>
        <form class="pass-form" id="password-form">
            {{{inputoldpass}}}
            {{{inputnewpass}}}
            {{{buttonchangepass}}}
        </form>
    </section>
    <div id="error"></div>
</main>
