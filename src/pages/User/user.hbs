<main class="page">
    <section class="user-section">
        <h2 class="title">Change a user</h2>
        <div class="container">
            {{!-- пробовала передавать так: {{#if props.isAvatar}} но не работает тоже --}}
            {{#if props.avatar}}
                <img
                    class={{styles.avatar}}
                    src={{props.avatar}}
                    width="100"
                    height="100"
                    alt="avatar"
                />
            {{else}}
                <div class={{styles.avatar}} width="450" height="450">Аватар
                    отсутствует</div>
            {{/if}}
            <form class="user-form" id="avatar-form">
                {{{logoutbtn}}}
                {{{inputavatar}}}
                <input id="avatar" type="file" name="avatar" accept="image/*" />

                {{{buttonavatar}}}
            </form>
            <form class="user-form" id="settings-registry-form">
                {{{inputemail}}}
                {{{inputlogin}}}
                {{{inputfirst_name}}}

                {{{inputsecond_name}}}
                {{{inputdisplay_name}}}
                {{{inputphone}}}

                {{{editbutton}}}
                {{{buttonlogout}}}
            </form>
            <form class="user-form" id="password-form">
                {{{inputoldpass}}}
                {{{inputnewpass}}}
                {{{buttonchangepass}}}
            </form>
            <p id="error" class="error"></p>
            {{!-- {{{button}}} --}}
        </div>
    </section>
</main>
